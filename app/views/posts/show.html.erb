<h1 class="text-center">Post</h1>

<div class="row">
  <div class="col-lg-4 offset-lg-4">
    <div class="post-image">
      <% if @post.image? %>
          <%= image_tag @post.image.url %>
      <% else %>  
          <%= image_tag 'no_image.png' %>
      <% end %>
    </div>
    <div class="media-body text-left ml-3">
      <div>
        <%= link_to @post.user.name, user_path(@post.user) %> <span class="">posted at <%= @post.created_at %></span>
      </div>
      <div>
        <p><%= link_to @post.content, @post %></p>
        <p>weight:<%= @post.weight %>kg</p>
      </div>
      <div class="row">
        <div class="col-2">
          <% if current_user == @post.user %>
            <%= link_to "Delete", @post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
        <div class="col-2">
          <%= render 'favorites/like_button', post: @post %>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<div class="row col-lg-4 offset-lg-4">
  <div>
    <h2>Liked by</h2>
  </div>
  <% @post.liked_users.each do |user| %>
    <ul>
      <li class="media">
        <p class="users-profile">
          <% unless user.image? %>
            <%= image_tag 'no_image.png', width:100 %>
          <% else %>  
            <%= image_tag user.image.to_s, width:100 %>
          <% end %>
        </p>
        <div class="media-body">
        <div>
          <%= user.name %>
        </div>
        <div>
          <p><%= link_to user.profile, user_path(user) %></p>
        </div>
        </div>
      </li>
    </ul>
  <% end %>
</div>

