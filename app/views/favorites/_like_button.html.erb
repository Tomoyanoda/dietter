<% if post.like?(current_user) %>
  <%= form_with(model: post.favorites.find_by(user_id: current_user.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.submit 'Unlike', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: post.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :post_id, post.id %>
    <%= f.submit 'Like', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
