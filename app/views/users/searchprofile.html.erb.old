<!--検索結果画面のビューファイルを作成-->
<%= form_with(url: searchprofile_users_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "Search Profile", class: "search-input" %>
  <%= form.submit "Search", class: "search-btn" %>
<% end %>

<div class="contents row">
<!--renderを繰り返し出力する-->
  <div>
    <% @user.each do |user| %>
      <li class="media">
        <p class="users-profile">
          <% unless user.image? %>
            <%= image_tag 'no_image.png', width:100 %>
          <% else %>  
            <%= image_tag user.image.to_s, width:100 %>
          <% end %>
        </p>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to user.profile, user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </div>
</div>